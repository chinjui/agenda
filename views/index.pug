      // brand, title and user info
      a.navbar-brand(href="#")
        img(src="https://gdurl.com/SDjR", height="36", width="36")
      #user-info-container.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href="#", class="mt-2.mt-md-0")
              | 新竹大專得勝訓練 
              span.sr-only (current)
      
      // sign in modal
      div(class="modal fade", id="signin-modal")
        div(class="modal-dialog modal-dialog-centered")
          div(class="modal-content")
            div(class="modal-header")
              h4(class="modal-title") 登入
              button(type="button", class="close", data-dismiss="modal") &times;
            div(class="modal-body")
              div(id="firebaseui-auth-container")
            div(class="modal-footer")
              button(type="button", class="btn btn-danger", data-dismiss="modal") 取消
    
    // calendar
    div.container.wrapper.calendar-container
      div#calendar.fc
        
